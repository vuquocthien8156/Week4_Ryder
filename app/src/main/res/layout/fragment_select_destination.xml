<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLines="1"
            android:hint="Where your heading?"
            android:drawableStart="@drawable/ic_flag"
            android:drawablePadding="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/edtSearchPlace"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:padding="10dp"
            android:imeOptions="actionSearch"
            android:background="@drawable/shape_button"
            android:layout_alignParentStart="true"
            android:shadowColor="#000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"/>
    <TextView
            android:text="Nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:shadowColor="#000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:layout_alignParentStart="true"
            android:layout_below="@id/edtSearchPlace"/>
    <ListView
            android:id="@+id/lvPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@id/textView"
            android:layout_marginBottom="30dp"
            android:divider="#8f8f8f"
            android:dividerHeight="1dp"
            android:background="@drawable/shape_edt_linear"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:shadowColor="#000"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="171dp"
            android:id="@+id/progressBarSearchPlace" android:layout_marginTop="167dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="165dp" android:visibility="gone" />

</RelativeLayout>