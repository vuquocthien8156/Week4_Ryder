<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">

    <TextView
            android:text="@string/besttrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/textView2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502"
    />
    <TextView
            android:text="@string/besttripwithus"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:paddingTop="2dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Loadding..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:maxEms="16"
            android:id="@+id/txtLocation"
            android:drawableStart="@drawable/ic_place_white_24dp"
            android:layout_marginTop="44dp"
            android:drawablePadding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnWhere"
            android:text="Where you heading?"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_button"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:drawableStart="@drawable/ic_flag"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.004"/>


</android.support.constraint.ConstraintLayout>